@page
@model RegisterModel
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Inicio de Sesión</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Poppins:wght@300;600;700;800;900&display=swap"
              rel="stylesheet" />
        <link rel="stylesheet" href="~/css/style.css" />
        <link rel="stylesheet" href="~/css/normalize.css" />
    </head>
    <body style="
      background: linear-gradient(
        270deg,
        rgba(74, 3, 156, 0.582) 0%,
        rgba(114, 0, 190, 0.644) 50%,
        rgba(169, 0, 247, 0.61) 100%
      );
    ">
    
        <nav class="nav_l">
            <div class="nav__left">
                <img src="~/img/Escudo CTP Oreamuno.png" alt="logo-ctpo" />
                <div class="nav__links">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li><a href="" style="color: transparent">Especialidades</a></li>
                        <li><a href="" style="color: transparent">Conocenos</a></li>
                    </ul>
                </div>
            </div>
            <div class="nav__right">
                <ul>
                    <li><a href="" class="" style="color: transparent">Contáctanos</a></li>
                </ul>
            </div>
        </nav>
            <main>
                <div class="login__page">
                    <div class="login__content">
                        <h1>Crea una cuenta</h1>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form_login">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h2 class="no-whitespace">Registrate</h2>
                            <p class="no-whitespace">Registrate</p>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">¿Ya tienes cuenta? <span class="spanlogin">Inicia sesión</span></a>

                            <button class="btn">Registrarse</button>
                        </form>
                </div>
                    <div class="login__img img_reg" style="margin:0">
                        <img src="~/img/undraw_Forms_re_pkrt.svg" alt="" />
                    </div>
                </div>
            </main>
            <partial name="_ValidationScriptsPartial" />
            }
        </body>
    </html>




 